<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/rounded_solid_small"
    >

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:background="@drawable/back_employee_details"
                android:orientation="horizontal"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/user_id"
                        android:textColor="#857389"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/textUserId"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="123456789"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/name"
                        android:textColor="#857389"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/textName"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Sumon"
                        android:maxLength="8"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/role"
                        android:textColor="#857389"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/textRole"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="RGN"
                        android:maxLength="3"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageClose"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:background="@drawable/circle_theme"
                android:src="@drawable/ic_icon_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/white" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="32dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/remove_this_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:weightSum="2"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonCancel"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/cancel"
                android:background="@drawable/rounded_solid_rectangle_65"
                android:backgroundTint="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonRemove"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/remove"
                android:background="@drawable/rounded_solid_rectangle"
                android:backgroundTint="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>