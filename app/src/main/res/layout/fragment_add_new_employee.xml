<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddNewEmployeeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/profileLayout"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="120dp"
            android:layout_height="120dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageProfile"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp"
                android:padding="4dp"
                android:src="@drawable/default_pro_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageCamera"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:padding="4dp"
                android:background="@drawable/circle_theme"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_photo_camera_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingStart="0.5dp"
                    android:paddingEnd="8dp"
                    android:layout_weight="1.5"
                    android:text="@string/user_id"
                    android:textColor="#6D7278"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/edtUserId"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:inputType="phone|textMultiLine"
                    android:maxLines="2"
                    android:hint="123456"
                    android:maxLength="6"
                    android:padding="16dp"
                    android:background="@drawable/back_add_new_employee"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutUserId"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1.5"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textUserId"
                    android:layout_weight="2.5"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:textColor="@color/red"
                    android:textSize="10sp"
                    android:text="@string/userid_validation"
                    android:layout_gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingStart="0.5dp"
                    android:paddingEnd="8dp"
                    android:layout_weight="1.5"
                    android:text="@string/password"
                    android:textColor="#6D7278"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/edtPassword"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:inputType="textPassword|textMultiLine"
                    android:maxLines="2"
                    android:hint="********"
                    android:padding="16dp"
                    android:background="@drawable/back_add_new_employee"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPassword"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1.5"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textPassword"
                    android:layout_weight="2.5"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:textColor="@color/red"
                    android:textSize="10sp"
                    android:text="@string/pass_validation"
                    android:layout_gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingStart="0.5dp"
                    android:paddingEnd="8dp"
                    android:layout_weight="1.5"
                    android:text="@string/confirm_password"
                    android:textColor="#6D7278"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/edtConfirmPassword"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:inputType="textPassword|textMultiLine"
                    android:maxLines="2"
                    android:hint="********"
                    android:padding="16dp"
                    android:background="@drawable/back_add_new_employee"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutConfirmPassword"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1.5"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textConfirmPassword"
                    android:layout_weight="2.5"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:textColor="@color/red"
                    android:textSize="10sp"
                    android:text="@string/not_matched"
                    android:layout_gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingStart="0.5dp"
                    android:paddingEnd="8dp"
                    android:layout_weight="1.5"
                    android:text="@string/name"
                    android:textColor="#6D7278"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/edtName"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:inputType="text|textMultiLine"
                    android:maxLines="2"
                    android:hint="Noman Ali Khan"
                    android:padding="16dp"
                    android:background="@drawable/back_add_new_employee"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutName"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1.5"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textName"
                    android:layout_weight="2.5"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:textColor="@color/red"
                    android:textSize="10sp"
                    android:text="@string/not_matched"
                    android:layout_gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingStart="0.5dp"
                android:paddingEnd="8dp"
                android:layout_weight="1.5"
                android:text="@string/date_of_birth"
                android:textColor="#6D7278"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSelectBirthDate"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/select_birth_date"
                android:padding="14dp"
                android:background="@drawable/back_add_new_employee"
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_vertical"
                android:paddingStart="0.5dp"
                android:paddingEnd="8dp"
                android:layout_weight="1.5"
                android:text="@string/role"
                android:textColor="#6D7278"
                android:textAlignment="textStart"
                android:gravity="start"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/mySpinner"
                android:textSize="16sp"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:inputType="text|textMultiLine"
                android:background="@drawable/back_add_new_employee"
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:layout_height="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingStart="0.5dp"
                    android:paddingEnd="8dp"
                    android:layout_weight="1.5"
                    android:text="@string/email"
                    android:textColor="#6D7278"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/edtEmail"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress|textMultiLine"
                    android:maxLines="2"
                    android:hint="noman@example.com"
                    android:padding="16dp"
                    android:background="@drawable/back_add_new_employee"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutEmail"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1.5"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textEmail"
                    android:layout_weight="2.5"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:textColor="@color/red"
                    android:textSize="10sp"
                    android:text="@string/not_matched"
                    android:layout_gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingStart="0.5dp"
                    android:paddingEnd="8dp"
                    android:layout_weight="1.5"
                    android:text="@string/mobile_telephone"
                    android:textColor="#6D7278"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/edtMobile"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:inputType="phone|textMultiLine"
                    android:maxLines="2"
                    android:hint="1589654"
                    android:padding="16dp"
                    android:background="@drawable/back_add_new_employee"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutMobile"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1.5"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textMobile"
                    android:layout_weight="2.5"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:textColor="@color/red"
                    android:textSize="10sp"
                    android:text="@string/not_matched"
                    android:layout_gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1.5"
                android:text="Date of join"
                android:textColor="#6D7278"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSelectJoiningDate"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/select_joining_date"
                android:textAllCaps="true"
                android:padding="16dp"
                android:background="@drawable/back_add_new_employee"
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonAdd"
            android:layout_margin="16dp"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@string/add"
            android:background="@drawable/rounded_solid_rectangle"
            android:backgroundTint="@color/colorPrimary"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>